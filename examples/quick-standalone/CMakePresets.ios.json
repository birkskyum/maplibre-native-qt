{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 19,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "ios-base",
      "hidden": true,
      "generator": "Xcode",
      "cacheVariables": {
        "CMAKE_SYSTEM_NAME": "iOS",
        "CMAKE_OSX_DEPLOYMENT_TARGET": "14.0",
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "ios-device-metal",
      "inherits": "ios-base",
      "displayName": "iOS Device with Metal",
      "description": "Build for iOS device with Metal rendering",
      "cacheVariables": {
        "CMAKE_OSX_ARCHITECTURES": "arm64",
        "MLN_WITH_METAL": "ON",
        "MLN_WITH_OPENGL": "OFF",
        "CMAKE_XCODE_ATTRIBUTE_DEVELOPMENT_TEAM": "$env{DEVELOPMENT_TEAM_ID}",
        "CMAKE_XCODE_ATTRIBUTE_CODE_SIGN_IDENTITY": "iPhone Developer"
      }
    },
    {
      "name": "ios-simulator-metal",
      "inherits": "ios-base",
      "displayName": "iOS Simulator with Metal",
      "description": "Build for iOS Simulator with Metal rendering",
      "cacheVariables": {
        "CMAKE_OSX_SYSROOT": "iphonesimulator",
        "CMAKE_OSX_ARCHITECTURES": "arm64",
        "MLN_WITH_METAL": "ON",
        "MLN_WITH_OPENGL": "OFF",
        "CMAKE_XCODE_ATTRIBUTE_CODE_SIGNING_ALLOWED": "NO"
      }
    },
    {
      "name": "ios-simulator-x64-metal",
      "inherits": "ios-simulator-metal",
      "displayName": "iOS Simulator x64 with Metal",
      "description": "Build for iOS Simulator on Intel Mac with Metal rendering",
      "cacheVariables": {
        "CMAKE_OSX_ARCHITECTURES": "x86_64"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "ios-device-metal-build",
      "configurePreset": "ios-device-metal",
      "configuration": "Release"
    },
    {
      "name": "ios-simulator-metal-build",
      "configurePreset": "ios-simulator-metal",
      "configuration": "Release"
    }
  ]
}
